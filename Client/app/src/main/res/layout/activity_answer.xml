<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uk.ac.soton.ecs.negotiatingconsent.activities.AnswerActivity">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dip"
        android:background="#ff90bfff"
        android:layout_alignParentTop="true"
        android:id="@+id/topPanel">
        <ImageView
            android:id="@+id/reviewicon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/bluequestion"
            android:contentDescription="icon_image"
            android:padding="4sp"
            android:background="#ff90bfff"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ff90bfff"
            >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textTitle"
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="#ff90bfff"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Answer the question"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>
    </LinearLayout>


<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="20dp"
    android:id="@+id/buttonPanel2"
    android:layout_marginRight="20dp"
    android:layout_below="@id/topPanel">


    <LinearLayout
        android:id="@+id/questionPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
       >
    </LinearLayout>

</LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_below="@id/buttonPanel2"
        android:layout_marginTop="20dp"
        android:id="@+id/tableLayout1"
        >


        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"

            >

            <ImageView
                android:id="@+id/shareImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
               />

            <TextView
                android:id="@+id/forImage"
                android:background="@drawable/arrowgreen"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textColor="#fffffeda"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/pointsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textSize="22dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"/>
            <ImageView
                android:id="@+id/textName"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/coin_icon"
                android:hint="points"
                />

        </TableRow>

    </TableLayout>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/itemText"
        android:textStyle="bold"
        android:layout_below="@+id/tableLayout1"
        android:textSize="20dp"
        android:layout_marginLeft="50dp"

        />

    <LinearLayout
        android:id="@+id/buttonPanel"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true">
    </LinearLayout>


</RelativeLayout>
